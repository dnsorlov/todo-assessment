.TODOItem
  padding 8px
  display: flex
  justify-content space-between
  border-bottom 1px solid #bfc1c7
  height: 47px
  box-sizing border-box

  &:last-child
    border none

  &__label
    flex 1 auto
    padding: 0 12px;
    font-size: 18px;
    line-height: 29px;
    overflow: hidden

  &__toggle
  &__delete-btn
    height: 30px;
    width: 30px;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    background-color: transparent;
    outline none
    cursor: pointer

  &__toggle
    -webkit-appearance: none;
    padding: 8px;
    border-radius: 50%;
    background-color white
    box-shadow: inset 0 0 7px 0px #2a2e362e;
    border: 1px solid #2a2e3636;
